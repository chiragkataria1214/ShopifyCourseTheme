<!-- product_product is the variable that is passed to this snippet -->
<div class="w-full py-6 px-3">
  <div class="border border-violet-300 bg-white shadow-lg rounded-lg overflow-hidden">
    <a href="{{ product_product.url }}">
      {% if product_product.featured_image %}
        <div class="h-80 overflow-hidden">
            <!-- Added following classes for image zoom in effect--"transition duration-1000 ease-in-out hover:scale-105 transform" -->
          <img
            class="w-full h-full object-cover transition duration-1000 ease-in-out hover:scale-105 transform"
            src="{{ product_product.featured_image | img_url: 'medium' }}"
            alt="{{ product_product.featured_image.alt }}"
          >
        </div>

      {% else %}
        {{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-cover bg-gray-100' }}
      {% endif %}
    </a>

    <div class="flex flex-col p-4">
     <!-- Vendor can be manufacturer/distributor etc -->
      <span class="text-sm text-gray-400">{{ product_product.vendor }}</span>

      <a href="{{ product_product.url }}" class="text-gray-700 uppercase font-medium">{{ product_product.title }}</a>

      <p class="text-gray-500">{{ product_product.price | money }}</p>
      <!-- if we just use product.price and not | money than it will display price in just numbers only like: 30 not â‚¹30 -->
    </div>
  </div>
</div>
