<h1 class="font-bold text-6xl">{{ section.settings.title }}</h1>
<p class="font-medium text-2xl">{{ section.settings.subtext_html }}</p>


{% if section.settings.btn_link == blank %}
  {% assign btn_url = shop.secure_url %}
  <!-- If no button link is provided (blank), assign the secure URL of the shop as the button URL -->
{% else %}
  {% assign btn_url = section.settings.btn_link %}
  <!-- If a button link is provided, assign it to the btn_url variable -->
{% endif %}

  <a href="{{ btn_url }}" class="bg-violet-500 rounded-md px-4 py-2 mt-5 font-bold hover:bg-violet-700 duration-300">
    {{ section.settings.btn_label }}
  </a>

{% schema %}
{
  "name": "Template 404",
  "tag": "section",
  "class": "flex justify-center items-center min-h-screen flex-col",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "404",
      "label": "404 Heading Title"
    },
    {
      "type": "text",
      "id": "subtext_html",
      "default": "Sorry, the page you are looking for does not exist.",
      "label": "404 Subtext Title"
    },
    {
      "type": "text",
      "id": "btn_label",
      "default": "Return Home",
      "label": "Button Label"
    },
    {
      "type": "url", // IMPT
      "id": "btn_link",
      "label": "Button Link"
    }
  ]
}
{% endschema %}
